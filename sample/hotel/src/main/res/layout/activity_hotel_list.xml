<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="this is hotel list activity" />

    <Button
        android:id="@+id/go_ticket_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to ticket"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <Button
        android:id="@+id/go_to_kotlin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to kotlin"
        app:layout_constraintTop_toBottomOf="@id/go_ticket_btn" />

    <Button
        android:id="@+id/go_to_java_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to java"
        app:layout_constraintTop_toBottomOf="@id/go_to_kotlin_btn" />
</android.support.constraint.ConstraintLayout>